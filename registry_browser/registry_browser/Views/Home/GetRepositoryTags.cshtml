@model registry_browser.Pocos.RepositoryTags

@{
    ViewBag.Title = $"{Model.name} - Tags";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Tag</th>
                    <th>Pull</th>
                    <th>Manifest</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var tag in Model.tags)
            {
                <tr>
                    <td>@tag</td>
                    <td><code> docker pull @ViewData["repositoryAddress"]:@tag</code></td>
                    <td> <a href="@ViewData["manifestAddress"]/@tag">Manifest</a></td>
                    <td>
                        <a class="btn btn-danger" href="#" role="button">Link</a>
                        
                        <a asp-controller="Home"
                           asp-action="DeleteTag"
                           asp-route-repository="@repository"
                           class="btn btn-danger">Delete this Tag</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>